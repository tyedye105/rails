<h1 class="title"> Edit Contribution:</h1>
<%= render "layouts/errors", :object => @contribution %>
<div class="well">
<%= image_tag @contribution.image %>
<%= form_for [@tale, @contribution] do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <%= f.label :username %>
  <%= f.text_field :username, class: 'form-control' %>
  <%= f.hidden_field :image, :value => @contribution.image %>
    <%= f.submit class: 'btn btn-primary'%>

</div>


<% end %>
